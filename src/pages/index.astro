---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import About from "../components/About.astro";
import Footer from "../components/Footer.astro";
import Map from "../components/Map.astro";
import LittleNap from "../components/LittleNap.astro";
---

<Layout title={"Muka Bar Bilbao - "}>
  <Header />
  <div id="topArea">
    <div class="bg fadeImg isShow" />
		<!-- <img src="/src/assets/images/muka.gif" alt="Muka Bilbao" /> -->
  </div>

  <main>
    <About />
    <LittleNap />
    <div id="photoArea" />
    <Map />
    <Footer />
  </main>
</Layout>

<style>
  #topArea {
    background-size: cover;
    height: calc(100% - 77px);
    text-align: center;
    margin-bottom: 77px;
    min-width: 1200px;
  }

  #topArea .bg {
    position: absolute;
    top: 0;
    left: 0;
    background: url(../assets/images/img_top.jpg) center bottom;
    background-size: cover;
    width: 100%;
    height: 838px;
    min-width: 1200px;
  }
  
  #topArea img {
    display: inline-block;
    height: 100%;
    position: relative;
    z-index: 1;
  }

  .fadeImg {
    opacity: 0;
    transition: opacity 0.6s ease-out;
  }

  .fadeImg.isShow {
    opacity: 1;
  }

  #photoArea {
    height: 640px;
    background: url(../assets/images/background.jpg) center center no-repeat fixed;
    background-size: cover;
  }

  main {
    transition: margin-top 0.3s ease-in-out; /* Suaviza el cambio de margen */
  }
</style>