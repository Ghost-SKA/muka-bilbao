---

const pages = [
	{ name: "Inicio", href: "/" },
	{ name: "Galeria", href: "/gallery" },
	{ name: "Menu", href: "/menu" },
	{
		name: "Ubicación",
		href: "/local",
		target: "_blank",
	},
].map((page) => ({
	...page,
	active: Astro.url.pathname === page.href,
}))
