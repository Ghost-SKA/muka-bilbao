<style>
	.open-banner {
		min-height: 30px;
		width: 100%;
		background-color: #000;
		color: white;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.navbar-container  {
		max-width: 1318px;
		width: 100%;
		padding-right: 15px;
		padding-left: 15px;
		margin-right: auto;
		margin-left: auto;
	}

	.navbar-section {
		height: 140px;
		background-color: #f9f9fe;
	}

	.navbar  {
		height: 110px;
		padding: .5rem 1rem;
	}

	.navbar-brand {
		display: inline-block;
		padding-top: .3125rem;
		padding-bottom: .3125rem;
		margin-right: 1rem;
		font-size: 1.25rem;
		line-height: inherit;
		white-space: nowrap;
	}

	.burger {
		width: 100%;
	}

	.fullscreen-menu {
		background-image: url(/web/20211204211823im_/https://kojo.co.uk/img/home/menu-bg.png);
		background-repeat: no-repeat;
		background-size: cover;
		background-position: 50%;
		position: fixed;
		left: 0;
		top: 0;
		width: 100vw;
		height: 100vh;
		transform: translateX(-100%);
		transition: transform .5s ease;
	}

	.fullscreen-menu-close-button {
		background: 0 0;
		border: none;
		width: 40px;
		height: 40px;
		padding: 0;
		position: absolute;
		left: 40px;
		top: 25px;
	}

	.fullscreen-menu-close-button>img {
		width: 40px;
		height: 40px;
	}

	.navigation-wrapper {
		padding: 0;
		list-style-type: none;
	}

	.navigation-wrapper>li {
		font-size: 60px;
		font-weight: 700;
		line-height: 70px;
	}
